<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="1000">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    %r [%-5level] [%t] %c{1} - %msg%n
                </pattern>>
            </PatternLayout>
        </Console>

    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>